{
    "testEnvironment": "jsdom",
    "roots": [
        "<rootDir>/resources/ts"
    ],
    "moduleNameMapper": {
        "@/(.*)$": "<rootDir>/resources/ts/$1"
    },
    "testMatch": [
        "**/__tests__/**/*.+(ts|tsx|js)",
        "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
        "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "setupFilesAfterEnv": ["<rootDir>/resources/ts/test/mock/jest.setup.ts"]
}
